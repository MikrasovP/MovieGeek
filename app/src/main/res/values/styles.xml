<resources>

    <style name="GeekTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorBackgroundDarker</item>
        <item name="android:textColor">@color/colorTextLighter</item>
        <item name="android:textColorSecondary">@color/colorTextDarker</item>
        <!--<item name="android:background">@color/colorBackground</item>-->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackgroundDarker</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

    <style name="GeekTheme.Discover" />

    <style name="GeekTheme.Discover.Subtitle">
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:paddingStart">@dimen/discover_subtitle_side_padding_10</item>
        <item name="android:paddingEnd">@dimen/discover_subtitle_side_padding_10</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="GeekTheme.Discover.Card" />

    <style name="GeekTheme.Discover.Card.Title">
        <item name="android:textColor">@color/colorTextLighter</item>
        <item name="android:textSize">@dimen/font_normal_16</item>
        <item name="android:paddingStart">@dimen/spacing_small_8</item>
        <item name="android:paddingEnd">@dimen/spacing_small_8</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
    </style>

    <style name="GeekTheme.Discover.Card.Date">
        <item name="android:textColor">@color/colorTextDarker</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:paddingStart">@dimen/spacing_small_8</item>
        <item name="android:paddingEnd">@dimen/spacing_small_8</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="GeekTheme.Discover.Card.AdultLabel">
        <item name="android:textColor">@color/colorTextLighter</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:alpha">@dimen/adult_label_alpha</item>
        <item name="android:paddingStart">@dimen/spacing_tiny_4</item>
        <item name="android:paddingEnd">@dimen/spacing_tiny_4</item>
    </style>
</resources>