<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/spacing_small_8"
    app:cardBackgroundColor="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@color/colorAccent"
            android:id="@+id/movie_poster_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:transitionName="meme_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/movie_title_tv"/>

        <TextView
            android:id="@+id/movie_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example Title"
            android:textColor="@color/colorTextLighter"
            android:textSize="@dimen/font_large_20"
            app:layout_constraintTop_toBottomOf="@id/movie_poster_iv"
            app:layout_constraintBottom_toTopOf="@id/movie_date_tv"
            />

        <TextView
            android:id="@+id/movie_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Example Date"
            android:textColor="@color/colorTextDarker"
            android:textSize="@dimen/font_normal_16"
            android:paddingHorizontal="@dimen/spacing_small_8"
            app:layout_constraintTop_toBottomOf="@id/movie_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>